<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/mainFragment">

    <fragment
        android:id="@+id/mainFragment"
        android:name="com.example.alex.motionlayoutsharing.MainFragment"
        android:label="MainFragment" >
        <action android:id="@+id/action_mainFragment_to_left_right_motion" app:destination="@id/left_right_motion"/>
        <action
            android:id="@+id/action_mainFragment_to_fragmentMotionRotateColour"
            app:destination="@id/fragmentMotionRotateColour" />
        <action
            android:id="@+id/action_mainFragment_to_fragmentImageFilter"
            app:destination="@id/fragmentImageFilter" />
        <action
            android:id="@+id/action_mainFragment_to_fragmentKeyFrames"
            app:destination="@id/fragmentKeyFrames" />
        <action
            android:id="@+id/action_mainFragment_to_fragmentCoordinatorMotion"
            app:destination="@id/fragmentCoordinatorMotion" />
        <action android:id="@+id/action_mainFragment_to_fragmentViewPager" app:destination="@id/fragmentViewPager"/>
    </fragment>
    <fragment
        android:id="@+id/left_right_motion"
        android:name="com.example.alex.motionlayoutsharing.simplemotion.FragmentSimpleMotion"
        android:label="fragment_left_right_motion"
        tools:layout="@layout/fragment_simple_motion" />
    <fragment
        android:id="@+id/fragmentMotionRotateColour"
        android:name="com.example.alex.motionlayoutsharing.rotatecolor.FragmentMotionRotateColour"
        android:label="FragmentMotionRotateColour" />
    <fragment
        android:id="@+id/fragmentImageFilter"
        android:name="com.example.alex.motionlayoutsharing.imagefilter.FragmentImageFilter"
        android:label="FragmentImageFilter" />
    <fragment
        android:id="@+id/fragmentKeyFrames"
        android:name="com.example.alex.motionlayoutsharing.keyframes.FragmentKeyFrames"
        android:label="FragmentKeyFrames" />
    <fragment
        android:id="@+id/fragmentCoordinatorMotion"
        android:name="com.example.alex.motionlayoutsharing.coordinator.FragmentCoordinatorMotion"
        android:label="FragmentCoordinatorMotion" />
    <fragment android:id="@+id/fragmentViewPager" android:name="com.example.alex.motionlayoutsharing.viewpager.FragmentViewPager"
              android:label="FragmentViewPager"/>
</navigation>