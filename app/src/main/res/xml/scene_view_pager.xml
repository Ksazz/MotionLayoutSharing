<?xml version="1.0" encoding="utf-8"?>
<MotionScene xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:motion="http://schemas.android.com/apk/res-auto">

    <Transition
        motion:constraintSetEnd="@+id/end"
        motion:constraintSetStart="@+id/start"
        motion:duration="1000"
        motion:interpolator="linear">

        <OnSwipe
            motion:dragDirection="dragRight"
            motion:touchAnchorId="@+id/view_pager_icon"
            motion:touchAnchorSide="right" />

        <ConstraintSet android:id="@+id/start">
            <Constraint
                android:id="@id/back"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:translationX="20dp"
                motion:layout_constraintBottom_toTopOf="@+id/view_pager_icon"
                motion:layout_constraintEnd_toEndOf="parent"
                motion:layout_constraintStart_toStartOf="parent"
                motion:layout_constraintTop_toTopOf="parent" />
            <Constraint
                android:id="@id/view_pager_icon"
                android:layout_width="@dimen/size_big_x"
                android:layout_height="@dimen/size_big_x"
                android:layout_marginLeft="50dp"
                motion:layout_constraintBottom_toBottomOf="parent"
                motion:layout_constraintLeft_toLeftOf="parent" />
        </ConstraintSet>

        <ConstraintSet android:id="@+id/end">
            <Constraint
                android:id="@id/back"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:translationX="-50dp"
                motion:layout_constraintBottom_toTopOf="@+id/view_pager_icon"
                motion:layout_constraintEnd_toEndOf="parent"
                motion:layout_constraintStart_toStartOf="parent"
                motion:layout_constraintTop_toTopOf="parent" />
            <Constraint
                android:id="@id/view_pager_icon"
                android:layout_width="@dimen/size_big_x"
                android:layout_height="@dimen/size_big_x"
                android:layout_marginRight="20dp"
                motion:layout_constraintBottom_toBottomOf="parent"
                motion:layout_constraintRight_toRightOf="parent" />
        </ConstraintSet>

    </Transition>

</MotionScene>