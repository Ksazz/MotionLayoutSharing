<?xml version="1.0" encoding="utf-8"?>
<com.example.alex.motionlayoutsharing.viewpager.ViewPagerHeader
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/motionLayout"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:background="@color/gray"
        app:layoutDescription="@xml/scene_view_pager"
        tools:context=".viewpager.FragmentViewPager">

    <TextView
            android:id="@+id/back"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="8dp"
            android:background="@color/gray"
            android:text="@string/back_text"
            android:textAllCaps="false"
            android:textColor="@android:color/holo_blue_dark"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" android:textSize="42dp" android:textStyle="normal|bold|italic"
            android:typeface="serif" android:gravity="center"/>


    <ImageView
            android:id="@+id/view_pager_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="8dp"
            android:layout_marginBottom="8dp"
            android:src="@drawable/ic_arrow"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>
</com.example.alex.motionlayoutsharing.viewpager.ViewPagerHeader>