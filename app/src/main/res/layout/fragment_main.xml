<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                                   xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
                                                   android:layout_height="match_parent">

    <Button
            android:text="@string/left_right_motion"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/btn_simple_motion" app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="8dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp" android:layout_marginTop="16dp"
            app:layout_constraintTop_toTopOf="parent"/>

    <Button
        android:id="@+id/btn_rotate_motion"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="@string/rotate_color_motion"
        app:layout_constraintEnd_toEndOf="@+id/btn_simple_motion"
        app:layout_constraintStart_toStartOf="@+id/btn_simple_motion"
        app:layout_constraintTop_toBottomOf="@+id/btn_simple_motion" />

    <Button
        android:id="@+id/btn_image_filter"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="@string/image_filter"
        app:layout_constraintEnd_toEndOf="@+id/btn_rotate_motion"
        app:layout_constraintStart_toStartOf="@+id/btn_rotate_motion"
        app:layout_constraintTop_toBottomOf="@+id/btn_rotate_motion" />

    <Button
        android:id="@+id/btn_key_frames"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="@string/key_frames"
        app:layout_constraintEnd_toEndOf="@+id/btn_image_filter"
        app:layout_constraintStart_toStartOf="@+id/btn_image_filter"
        app:layout_constraintTop_toBottomOf="@+id/btn_image_filter" />
    <Button
            android:text="@string/coordinator"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/btn_coordinator" app:layout_constraintEnd_toEndOf="@+id/btn_key_frames"
            app:layout_constraintStart_toStartOf="@+id/btn_key_frames" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/btn_key_frames"/>
</androidx.constraintlayout.widget.ConstraintLayout>